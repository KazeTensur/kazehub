-- ================= SERVICES =================
local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local lp = Players.LocalPlayer

-- ================= HTTP REQUEST =================
local http_request =
    (syn and syn.request)
    or (http and http.request)
    or request

if type(http_request) ~= "function" then
    Rayfield:Notify({
        Title = "HTTP Error",
        Content = "‚ùå Executor ch∆∞a b·∫≠t HTTP Requests",
        Duration = 4,
        Image = 4483362458,
    })
    return
end

-- ================= STATE =================
local WebhookEnabled = true
local customWebhook = ""

-- ================= LOAD WEBHOOK =================
pcall(function()
    if isfile("custom_webhook.txt") then
        customWebhook = readfile("custom_webhook.txt")
        print("üíæ Webhook loaded from file")
    end
end)

-- ================= UI PATH (GAME) =================
local resultUI = lp.PlayerGui:WaitForChild("battle"):WaitForChild("Result")
local content = resultUI:WaitForChild("Base"):WaitForChild("Content")

local resultLabel  = content:WaitForChild("Result")
local rewardFolder = content:WaitForChild("Rewards")
local stageLabel   = content:WaitForChild("Stage")

-- ================= DATA =================
local function getTotalBalance()
    local data = lp:FindFirstChild("Data")
    if not data then return "N/A" end

    local coins = data:FindFirstChild("Coins")
    local gems  = data:FindFirstChild("Gems")

    return string.format(
        "üí∞ Coins: %s\nüíé Gems: %s",
        coins and coins.Value or 0,
        gems and gems.Value or 0
    )
end

local function getMatchRewards()
    local rewards = {}
    for _, item in ipairs(rewardFolder:GetChildren()) do
        local qty = item:FindFirstChild("Quantity")
        if qty and qty:IsA("TextLabel") and qty.Text ~= "" then
            table.insert(rewards, "‚Ä¢ **" .. item.Name .. "**: " .. qty.Text)
        end
    end
    return #rewards > 0 and table.concat(rewards, "\n") or "Kh√¥ng c√≥ ph·∫ßn th∆∞·ªüng"
end

-- ================= SEND DISCORD (SAFE) =================
local function sendDiscord()
    if not WebhookEnabled or customWebhook == "" then return end

    task.wait(1.5)

    local resultText = resultLabel.Text or ""
    local isWin = resultText:lower():find("win") or resultText:lower():find("victory")

    local payload = {
        content = " ", -- üî¥ B·∫ÆT BU·ªòC (Discord-safe)
        username = "KazeHub | Match Result",
        embeds = {{
            title = isWin and "üèÜ VICTORY" or "üíÄ DEFEAT",
            color = isWin and 0x2ecc71 or 0xe74c3c,
            description =
                "üë§ Player: `" .. lp.Name .. "`\n" ..
                "üó∫ Stage: `" .. stageLabel.Text .. "`",
            fields = {
                { name = "üéÅ Rewards", value = getMatchRewards(), inline = false },
                { name = "üí∞ Balance", value = getTotalBalance(), inline = false },
            },
            footer = { text = "KazeHub | Delta Executor" },
            timestamp = os.date("!%Y-%m-%dT%H:%M:%S.000Z")
        }}
    }

    for i = 1, 3 do
        local ok, res = pcall(function()
            return http_request({
                Url = customWebhook,
                Method = "POST",
                Headers = {
                    ["Content-Type"] = "application/json",
                    ["User-Agent"] = "KazeHub-Delta"
                },
                Body = HttpService:JSONEncode(payload)
            })
        end)

        if ok and res then
            print("‚úÖ Discord webhook sent (try " .. i .. ")")
            return
        end
        task.wait(1)
    end

    warn("‚ùå Discord webhook failed")
end

-- ================= TRIGGER (ANTI DUPLICATE) =================
local sent = false
resultUI:GetPropertyChangedSignal("Visible"):Connect(function()
    if resultUI.Visible then
        if sent then return end
        sent = true
        sendDiscord()
    else
        sent = false
    end
end)

